extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        h1 My Products
        if prods.length > 0
            each product in prods
                div.grid
                    article.card.product-item
                        header.card__header
                            h1.product__titleGreat #{product.title}
                        div.card__image
                            img(src="https://images.pexels.com/photos/762687/pexels-photo-762687.jpeg", alt="A Book")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book about so many even more interesting things!
                        div.card__actions
                            button.btn to Cart
        else
            h1 No products

